{
  "manifest_version": 3,
  "name": "AI Job Application Tracker",
  "version": "1.0",
  "description": "Automatically tracks job applications from your Gmail using Gemini AI.",
  "permissions": [
    "identity",
    "storage",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://mail.google.com/*"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "oauth2": {
    "client_id": "406507224434-bdl2bf4pulp8ru6645qqlvvemlpkpl6a.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}